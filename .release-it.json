{
  "git": {
    "commitMessage": "chore: release v${version}",
    "requireCommits": true,
    "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}"
  },
  "github": {
    "autoGenerate": true,
    "release": true,
    "releaseName": "v${version}"
  },
  "npm": {
    "publishArgs": ["--provenance"]
  }
}
